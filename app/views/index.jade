extends layout

block content
	form(method="post" name="formURL" class="form-horizontal" onsubmit="return validateForm()")
		div.form-group
			label(for='url' class="col-sm-2 control-label") URL
			div.col-sm-10
				input(type="url" class="form-control" id="url" placeholder="URL" value="http://")
		div.form-group
			label(for='password' class="col-sm-2 control-label") Password
			div.col-sm-10
				input(type="password" class="form-control" id="password" placeholder="Password")
		div.form-group
			div.col-sm-offset-2.col-sm-10
				button(type="submit" class="btn btn-default") Generate
	script.
		function validateForm() {
			var url = document.forms['formURL']['url'].value
			var password = document.forms['formURL']['password'].value

			if(!url || !isUrl || !password){
				alert('test')
			}

			return false
		}

		function isUrl(s) {
			var regexp = /(ftp|http|https):\/\/(\w+:{0,1}\w*@)?(\S+)(:[0-9]+)?(\/|\/([\w#!:.?+=&%@!\-\/]))?/
			return regexp.test(s);
		}